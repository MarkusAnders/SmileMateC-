@page
@model MedicalHistoryModel
@{
    ViewData["Title"] = "SmileMate - Медициская история";
}

    <h1 class="history-title main-title">История посещений</h1>
    <section class="history">
        <div class="container">
            <div class="history-wrapper">
                <div class="history-top">
                <a asp-page="" class="history-nametitle">@Model.Patient.Surname @Model.Patient.Name @Model.Patient.Patronymic</a>
                    <div class="history-border"></div>
                    <form method="get" class="history-search">
                        <div class="search-wrapper">
                            <input name="searchTerm" type="text" class="history-search--input search-input" placeholder="Поиск...">
                            <button class="instrument-search--btn">
                                <img class="instrument-search--icon" src="/img/icon/search.svg">
                            </button>
                        </div>
                    </form>
                </div>
                <div class="history-bottom">
                    <ul class="history-list">
                        @foreach(var mh in Model.MedicalHystory)
                        {
                            <li class="history-item">
                                <a asp-page="/MedicalDisease?@mh.Id" class="history-link">
                                    <div class="history-card">
                                        <div class="history-content">
                                            <p class="history-card-date">@mh.Reception.Date</p>
                                            <p class="history-card--doctor form-label">Врач: <span>@mh.Reception.Doctor.Surname @mh.Reception.Doctor.Name @mh.Reception.Doctor.Patronymic</span></p>
                                            <p class="history-card--diagnosis form-label">Диагноз: <span>@mh.Diagnosis</span></p>
                                            <p class="history-card--diagnosis form-label">Стоимость: <span>@mh.Price</span> руб.</p>
                                        </div>
                                    </div>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </section>

