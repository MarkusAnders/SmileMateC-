@page
@model PatientCreate
@{
    ViewData["Title"] = "SmileMate - Регистрация клиента";
}

    <h1 class="client-create--title main-title">Регистрация клиента</h1>
    <section class="client-create create">
        <div class="container">
            <div class="create-wrapper form-wrapper">
                <div class="create-form form">
                    <form method="post" asp-page="/Authorization" asp-page-handler="CreatePatient" class="">
                        <div class="form-inputs">
                            <div class="inputs-left">
                                <label class="input-label">Фамилия</label>
                                <input required name="surname" type="text" class="input-surname form-input input" placeholder="Введите данные...">
                                <label class="input-label">Имя</label>
                                <input required name="name" type="text" class="input-name form-input input" placeholder="Введите данные...">
                                <label class="input-label">Отчество</label>
                                <input required name="patronymic" type="text" class="input-patronymic form-input input" placeholder="Введите данные...">
                            </div>
                            <div class="inputs-rigth">
                                <label class="input-label">Номер телефона</label>
                                <input autocomplete="off" required name="phonenumber" type="text" class="input-number form-input input" id="phone" placeholder="+7(___) ___-__-__">
                                <label class="input-label">Дата рождения</label>
                                <input required name="date" type="date" class="input-date form-input input" id="birthdate" placeholder="Введите данные...">
                                <label autocomplete="off"class="input-label">Адрес</label>
                                <input required name="adress" type="text" class="input-address form-input input" placeholder="Введите данные...">
                            </div>
                        </div>
                        <p class="form-label form-account">Данные для авторизации клиента</p>
                        <div class="inputs-bottom">
                            <div class="input-bottom--item input-bottom--email">
                                <label required class="input-label">Электронная почта</label>
                                <input id="email" oninput="validateEmail()" name="username" type="text" class="input-email patient-email form-input input" placeholder="Введите данные...">
                                <span id="error-message" class="error"></span>
                            </div>
                            <div class="input-bottom--item">
                                <div class="password-wrapper password-wrapper--profile">
                                    <label class="input-label">Пароль</label>
                                    <input required name="password" type="password" class="input-password patient-password form-input input" placeholder="Введите  пароль...">
                                    <button type="button" class="toggle-password toggle-password--patient" onclick="togglePassword()">
                                        <svg id="eye-icon" width="22" height="15" viewBox="0 0 22 15" fill="none" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M11 4.5C10.2044 4.5 9.44129 4.81607 8.87868 5.37868C8.31607 5.94129 8 6.70435 8 7.5C8 8.29565 8.31607 9.05871 8.87868 9.62132C9.44129 10.1839 10.2044 10.5 11 10.5C11.7956 10.5 12.5587 10.1839 13.1213 9.62132C13.6839 9.05871 14 8.29565 14 7.5C14 6.70435 13.6839 5.94129 13.1213 5.37868C12.5587 4.81607 11.7956 4.5 11 4.5ZM11 12.5C9.67392 12.5 8.40215 11.9732 7.46447 11.0355C6.52678 10.0979 6 8.82608 6 7.5C6 6.17392 6.52678 4.90215 7.46447 3.96447C8.40215 3.02678 9.67392 2.5 11 2.5C12.3261 2.5 13.5979 3.02678 14.5355 3.96447C15.4732 4.90215 16 6.17392 16 7.5C16 8.82608 15.4732 10.0979 14.5355 11.0355C13.5979 11.9732 12.3261 12.5 11 12.5ZM11 0C6 0 1.73 3.11 0 7.5C1.73 11.89 6 15 11 15C16 15 20.27 11.89 22 7.5C20.27 3.11 16 0 11 0Z" />
                                        </svg>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="form-btn">
                            <button type="submit" id="submit-button" class="btn-reg patient-create--btn main-btn">Зарегистрировать</button>
                        </div>
                    </form>
                </div>

                <div class="client-create-back-btn">
                    <a asp-page="/Patient" class="create-back-btn back-btn">
                        <svg class="back-btn--icon" width="29" height="19" viewBox="0 0 29 19"  xmlns="http://www.w3.org/2000/svg">
